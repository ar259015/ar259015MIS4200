@model IEnumerable<ar259015MIS4200.Models.PetDetails>

@{
    ViewBag.Title = "Your Visit Information";
}

<h2>Your Visit Information</h2>

<p>
    @Html.ActionLink("Add a Visit", "Create")
</p>
<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pet.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vet.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ownerfirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ownerlastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pet.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vet.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ownerfirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ownerlastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.petdetailID }) |
            @Html.ActionLink("Details", "Details", new { id=item.petdetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.petdetailID })
        </td>
    </tr>
}

</table>
